 <br/>
  <div id="user_nav" class="text-right">
  <% if current_user %>

    <span class="text-success">Logged in as <b><%= current_user.name %></b>.</span>
    <%if current_user.is_admin==true%>
  <%= link_to "Create Assignment",  new_assignment_path ,:class=>"btn btn-primary"%>
  <%end%>
    <%= link_to "Log out", log_out_path ,:class=>"btn btn-primary"%>
  <% else %>
    <%= link_to "Sign up", sign_up_path,:class=>"btn btn-primary"%> or
    <%= link_to "log in", log_in_path ,:class=>"btn btn-primary"%>
  <% end %>
</div>

<br/>
<% flash.each do |name, msg| %>
  <%= content_tag :div, msg, :id => "flash_#{name}" %>
<% end %>

